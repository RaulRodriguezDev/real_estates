extends ../layout/admin

block styles 
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)
block content
    div(class="py-2")
        h1(class="text-4xl my-10 font-extrabold text-center") Real 
            span(class="font-normal") Estate 
        h2(class="text-center text-2xl font-extrabold")= page

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="property_image" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" action=`porperties/add-image/${property.id}` method="POST")
                input(type="hidden" name="_csrf" value= csrfToken)
            input(class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-800 rounded text-white font-bold uppercase cursor-pointer"
            type="submit" value="Publish Property")
block scripts 
    script(src="/js/addImage.js")