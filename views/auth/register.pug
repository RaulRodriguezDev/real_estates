extends ../layout/index

block content
    div(class="py-2")
        h1(class="text-4xl my-10 font-extrabold text-center") Real 
            span(class="font-normal") Estate 
        h2(class="text-center text-2xl font-extrabold")= page

        if errors 
            .max-w-md.mx-auto.my-10
                each error in errors 
                    p(class=" text-white uppercase text-center p-2 mb-1 font-bold bg-red-600")= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(action="/auth/register/" method="POST" class="space-y-5")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="name") Your Name
                        input(type="text" id="name" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                        placeholder="Your Name" name="name" value= user ? user.name : '' )
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="mail") Your Email
                        input(type="mail" id="mail" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                        placeholder="Your Email" name="email" value= user ? user.email : '')
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Password 
                        input(type="password" id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                        placeholder="Password" name="password")
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="confirm_password") Confirm Password 
                        input(type="password" id="confirm_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                        placeholder="Confirm Password" name="confirm_password")
                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-xs") Have an account? Sign in 
                        a(href="/auth/forgot-password" class="text-gray-500 text-xs") Forgot your password?
                    input(type="submit" value="Create Account" class="w-full bg-indigo-300  hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")

